{
    "name": "vs-focus",
    "displayName": "Focus",
    "description": "Hide everything but selected text",
    "publisher": "IvoBarros",
    "version": "0.0.6",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#006f6f",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/L3v3L/vs-focus"
    },
    "engines": {
        "vscode": "^1.42.0"
    },
    "keywords": [
        "hide",
        "narrow",
        "fold",
        "highlight",
        "distraction"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.focus"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.focus",
                "title": "Focus"
            }
        ],
        "configuration": {
            "title": "Focus",
            "properties": {
                "vsfocus.opacity": {
                    "type": "number",
                    "default": 0.2,
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Opacity of unfocused text."
                },
                "vsfocus.color": {
                    "type": "string",
                    "default": "#ffffff",
                    "description": "Color of unfocused text (leave empty for syntax highlighting)"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^10.2.0",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}